FROM node:18-slim

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
COPY .sequelizerc ./
RUN npm install

# Copy configuration and migration files
COPY config/ ./config/
COPY migrations/ ./migrations/

# Set environment variables
ENV DB_PATH
ENV EVENTS_FILE

# Clean up any existing files and run setup
CMD ["npm", "run", "setup"]